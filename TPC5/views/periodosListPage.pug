extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal
            h1 
                span Periods List
                a.w3-btn.w3-round.w3-grey(href='/periodos/registo') +
                a.w3-btn.w3-round.w3-grey(href='/periodos') +
        .w3-container
            table.w3-table-all
                tr
                    th Periodo
                    th Actions
                
                each periodo in lPeriodos
                        tr
                            td= periodo.periodo
                           
                            td
                                span [
                                a(href='/periodos/edit/' + periodo.periodo) Edit
                                span ]

                                span [
                                a(href='/periodos/delete/' + periodo.periodo) Delete
                                span ]
    footer.w3-container.w3-blue 
        h5 Generated by RPCW2023 in #{date}