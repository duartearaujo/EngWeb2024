extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal
            h1 
                span #{compositor.nome}
        .w3-container
            ul.w3-ul.w3-card-4
                li Id: #{compositor.id}
                li Bio: #{compositor.bio}
                li DataNasc: #{compositor.dataNasc}
                li DataObito: #{compositor.dataObito}
                li Periodo:
                    a(href='/periodos/' + compositor.periodo)= compositor.periodo
                li 
                    a.w3-btn.w3-round.w3-grey(href='/compositores/edit/' + compositor.id) Edit
    footer.w3-container.w3-blue 
        h5 Generated by RPCW2023 in #{date}